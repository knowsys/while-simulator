        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "prettier": "^2.4.1"
    },
    "scripts": {
        "start": "npm run generateParser && react-scripts start",
        "build": "npm run generateParser && GENERATE_SOURCEMAP=false react-scripts build && npm run generateLicenseFile",
        "test": "react-scripts test",
        "lint": "prettier --loglevel warn --write \"**/*.{json,md,ts}\"",
        "generateParser": "nearleyc src/core/parser/nearley/whileGrammar.ne -o src/core/parser/nearley/generatedWhileGrammar.ts",
        "generateLicenseFile": "generate-license-file --input package.json --output build/3rd-party-licenses.txt"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    },
    "homepage": "./"
}
