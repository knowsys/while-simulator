        "@types/react-redux": "^7.1.20",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.7.0",
        "draft-js": "^0.11.7",
        "generate-license-file": "^1.2.0",
        "i18next": "^21.4.1",
